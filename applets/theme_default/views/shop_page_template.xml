					                    <a href="/"><span class="icon icon-House text-black"/></a>
					                </li>
			                        <li class="breadcrumb-item active">
			                            <span class="text-primary">Shop</span>
			                        </li>
			                    </ol>
							</div>
							<t t-if="is_view_active('theme_default.default_shop_category_slider_banner')">
								<div class="owl-carousel owl-theme" id="default_categ_slider">
									<t t-foreach="categories" t-as="c">
										<div class="categ_item">
								            <a t-att-href="keep('/shop/category/' + slug(c), category=0)" t-attf-class="nav-link categ_image #{'active' if c.id == category.id else ''}">
								            	<span itemprop="image" t-field="c.image_1920" t-options='{"widget": "image", "resize": None if image else "300x300"}' t-att-alt="c.name" />
								            </a>
								            <p class="text-center"><span t-field="c.name"/></p>
										</div>
