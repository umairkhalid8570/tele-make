<?xml version="1.0" encoding="UTF-8"?>

<templates>

    <!--Basic Field Image replace view for icon set-->
    <t t-name="TeleFieldBinaryImage">
        <div class="o_field_image" aria-atomic="true">
            <t t-if="widget.mode !== 'readonly'">
                <div class="o_form_image_controls">
                    <button type="button" class=" fa fa-image fa-lg tele_image_widget_icon_container float-left"
                            title="Select Icons">
                    </button>
                    <button class="fa fa-trash-o fa-lg float-right o_clear_file_button" title="Clear"
                            aria-label="Clear"/>
                    <span class="o_form_binary_progress">Uploading...</span>
                </div>
            </t>
        </div>
    </t>

    <!--Icon Container Modal Template : Modal TO show When clicked on Open Icons Container-->
    <t t-name="tele_icon_container_modal_template">
        <div class="modal fade" id="tele_icon_container_modal_id" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Select Icon</h4>
                    </div>
                    <div class="modal-body">
                        <div class="tele_modal_icon_input_div">
                            <div class="tele_search_modal_container">
                                <input type="search" id="site-search" placeholder="Search fa-icon.."
                                       name="fa Icon Input" aria-label="Search through site content"
                                       class="tele_modal_icon_input"/>

                                <button class="tele_fa_icon_search">
                                    <i class="fa fa-search"/>
                                </button>
                            </div>
                            <section
                                    style="margin-top: 12px;font-size: 14px;text-align: justify;color: black;background:transparent;">
                                <strong>
                                    Note:
                                </strong>
                                Please use Font Awesome 4.7.0 icons only. E.g. 'fa-bell' or 'bell'.
                                For more information visit
                                <a href="https://fontawesome.com/v4.7.0/icons/" target="_blank">Font Awesome 4.7.0</a>
                            </section>
                        </div>
                        <div class="tele_icon_container_grid_view">
                            <t t-foreach="tele_fa_icons_set" t-as="fa_icon">
                                <div class="tele_icon_container_list" id="icon1">
                                    <span t-att-id="'tele.'+fa_icon" t-att-class="'fa fa-' + fa_icon + ' fa-4x'"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary tele_icon_container_open_button"
                                data-dismiss="modal">Select
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </t>

    <!--Color Picker with opacity Layout-->
    <t t-name="tele_color_picker_opacity_view">
        <input class='tele_color_picker'/>
        <!--        <input class="tele_color_picker" type="color" t-att-value="tele_color_value"/>-->
        Transparency :
        <input type="range" t-att-value="tele_color_opacity" class="tele_color_opacity" name="tele_db_item_opacity" min="0"
               max="0.99" step="0.01"/>
    </t>

    <!--Template Layouts-->

    <t t-name="tele_db_list_field_required">
        <div class="tele_field_required">
            <p>Fields Required : Name, Model, Icon (Default or Custom Upload), Layout</p>
        </div>
    </t>

    <t t-name="tele_db_list_preview">
        <div class="tele_field_preview">
            <p>Coming Soon in Future :)</p>
        </div>
    </t>

