    <t t-name="tele_db_list_preview_layout1">
        <div id="enterID" class="tele_dashboard_item  tele_db_item_preview tele_db_item_preview_color_picker ">
            <div class="tele_dashboard_item_header tele_dashboard_item_header_hover">
                <button type="button" title="Customize Item" class="tele_dashboard_item_preview_customize">
                    <i class="fa fa-cog"/>
                </button>
                <button type="button" title="Remove Item" class="tele_dashboard_item_preview_delete">
                    <i class="fa fa-times"/>
                </button>
            </div>
            <div class="tele_dashboard_item_main_body">
                <div class="tele_dashboard_icon tele_dashboard_icon_color_picker">
                    <t t-if="icon_select=='Custom'">
                        <t t-if="img_src">
                            <img t-att-src="img_src" class="tele_db_list_image"/>
                        </t>
                    </t>
                    <t t-elif="icon_select=='Default'">
                        <span t-att-style="'color:'+ icon_color + ';'"
                              t-att-class="'fa fa-' + default_icon + ' fa-5x'"/>
                    </t>
                </div>
                <div class="tele_dashboard_item_info">
                    <div class="tele_dashboard_item_name" t-att-title="name">
                        <t t-esc="name"/>
                    </div>
                    <div class="tele_dashboard_item_domain_count" t-att-title="count_tooltip">
                        <t t-esc="count"/>
                    </div>
                </div>
            </div>
        </div>
    </t>

