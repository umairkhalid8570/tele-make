    <t t-name="tele_kpi_preview_template">
        <div class="tele_dashboard_kpi tele_dashboard_custom_srollbar  tele_db_kpi_preview tele_db_item_preview_color_picker">
            <div class="tele_dashboard_icon_l5 tele_dashboard_icon_color_picker">
                <t t-if="icon_select=='Custom'">
