<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="tele_dn_filter_container">
        <div class="tele_dashboard_top_menu tele_select_none">

            <!--  Date Filter Selection Options (Hide default for no content view)-->
            <div class="tele_dashboard_link tele_am_content_element tele_hide mr-4"
                 t-if="_(tele_dashboard_data.tele_dashboard_custom_domain_filter).keys().length || _(tele_dashboard_data.tele_dashboard_pre_domain_filter).keys().length"
            >
                <div class="tele_dn_filter_selection_input">
                    <div class="tele_dn_selection_box">
                        <div class="btn-group ">
                            <button class="o_dropdown_toggler_btn btn btn-secondary dropdown-toggle tele_date_filter_dropdown"
                                    data-toggle="dropdown"
                                    aria-expanded="false">
                                <span class="fa fa-lg fa-filter"/>
                                <span class="tele_dn_filter_selection">Filter</span>
                                <span class="caret"/>
                            </button>
                            <div class="tele_dn_filter_dropdown_container dropdown-menu dropdown-max-height tele_date_filters_menu_drop_down tele_dashboard_custom_srollbar">
                                <div>
                                    <ul id="tele_dn_filter_pre_domain_selector_container"
                                        class="tele_dn_pre_filter_menu"
                                        role="menu">
                                        <t t-foreach="tele_dn_pre_defined_filters"
                                           t-as="pre_filter">
                                            <t t-if="pre_filter['type']==='filter'">
                                                <li t-att-class="pre_filter['active'] ? 'dn_dynamic_filter_selected dn_filter_click_event_selector': 'dn_filter_click_event_selector' "
                                                    t-att-data-tele-categ="pre_filter['categ']"
                                                    t-att-data-filter-id="pre_filter['id']">
                                                    <span class="df_selection_text">
                                                        <t t-esc="pre_filter['name']"/>
                                                        <span class="tele_dn_pre_model_text">
                                                            <t t-esc="'(' + pre_filter['model_name'] + ')'"/>
                                                        </span>
                                                    </span>

                                                </li>
                                            </t>
                                            <t t-else="">
                                                <hr/>
                                            </t>
                                        </t>
                                        <hr t-if="_(tele_dashboard_data.tele_dashboard_custom_domain_filter).keys().length"/>
                                    </ul>

                                    <div class="o_generator_menu"
                                         t-if="_(tele_dashboard_data.tele_dashboard_custom_domain_filter).keys().length">
                                        <span>Custom Filter</span>
                                        <div id="tele_dn_custom_filters_container"
                                             class="o_filter_condition dropdown-item-text">

                                        </div>
                                        <div class="o_add_filter_menu dropdown-item-text">
                                            <button type="button"
                                                    class="btn btn-primary o_apply_filter tele_dn_filter_apply">Apply
                                            </button>
                                            <button type="button"
                                                    class="btn btn-secondary tele_custom_filter_add_condition">
                                                <i class="fa fa-plus-circle"/>
                                                Add a condition
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div t-att-class="_(tele_dashboard_data.tele_dashboard_domain_data).keys().length ? 'tele_dn_filter_applied_container': 'tele_dn_filter_applied_container tele_hide'">
                                    <t t-foreach="_(tele_dashboard_data.tele_dashboard_domain_data).keys()" t-as="data_key">
                                        <t t-call="tele_dn_filter_section_container_template">
                                            <t t-set="tele_domain_data"
                                               t-value="tele_dashboard_data.tele_dashboard_domain_data[data_key]"/>
                                            <t t-set="tele_model" t-value="data_key"/>
                                        </t>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="tele_dn_filter_section_container_template">
        <div t-att-data-tele-model-selector="tele_model" class="tele_dn_filter_section_container">
            <span class="tele_dn_filter_section_container_label">
                <t t-esc="tele_domain_data.model_name"/>
            </span>
            <span>
                <div class="o_searchview">
                    <div class="o_searchview_input_container">
                        <t t-foreach="tele_domain_data.tele_domain_index_data"
                           t-as="domain_index_data">
                            <div class="o_searchview_facet" t-att-data-tele-model="tele_model"
                                 t-att-data-tele-model-name="tele_domain_data.model_name"
                                 t-att-data-tele-categ="domain_index_data.categ || '0'">
                                <span class="o_searchview_facet_label fa fa-filter"/>
                                <div class="o_facet_values">
                                    <span class="o_facet_value">
                                        <t t-esc="domain_index_data.label.join(' or ')"/>
                                    </span>
                                </div>
                                <i role="img" aria-label="Remove" title="Remove"
                                   class="fa fa-sm fa-remove o_facet_remove tele_dn_filter_remove_event"/>
                            </div>
                        </t>
                    </div>
                </div>
            </span>
        </div>
    </t>

    <t t-name="tele_dn_custom_filter_input_container">
        <div t-att-class="show_remove_option ? 'tele_dn_or_container tele_dn_custom_filter_input_container_section': 'tele_dn_custom_filter_input_container_section'">
            <t t-if="show_remove_option">
                <span class="o_or_filter">or</span>
            </t>
            <select class="o_input o_generator_menu_field tele_custom_filter_field_selector">
                <t t-foreach="tele_dashboard_custom_domain_filter" t-as="custom_domain">
                    <option t-att-value="custom_domain['id']">
                        <t t-esc="custom_domain['name']"/>
                        <span class="tele_dn_pre_model_text">
                            <t t-esc="'(' + custom_domain['model_name'] + ')'"/>
                        </span>
                    </option>
                </t>
            </select>
            <t t-if="show_remove_option">
                <i role="image" aria-label="Delete" title="Delete"
                   class="fa fa-trash-o o_generator_menu_delete tele_custom_filter_section_delete"/>
            </t>
        </div>
    </t>

    <t t-name="tele_dn_custom_domain_input_operator">
        <select class="o_input o_generator_menu_operator tele_operator_option_selector">
            <t t-foreach="operators" t-as="operator">
                <option t-att-value="operator['symbol']">
                    <t t-esc="operator['description']"/>
                </option>
            </t>
        </select>
    </t>

    <t t-name="tele_dn_custom_domain_input_text">
        <span class="o_generator_menu_value">
            <input type="text" value="" class="o_input"/>
        </span>
    </t>

    <t t-name="tele_dn_custom_domain_input_date">
        <span class="o_generator_menu_value"/>
    </t>

    <t t-name="tele_dn_custom_domain_input_selection">
        <select class="o_input o_generator_menu_value">
            <t t-foreach="selection_input" t-as="selection_data">
                <option t-att-value="selection_data[0]">
                    <t t-esc="selection_data[1]"/>
                </option>
            </t>
        </select>
    </t>
</templates>